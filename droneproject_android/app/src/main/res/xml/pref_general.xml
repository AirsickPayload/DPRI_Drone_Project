<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="ip_drona"
        android:title="Adres IP Drona"
        android:defaultValue="127.0.0.1"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="url_stream"
        android:title="Adres URL streamu MJPEG"
        android:defaultValue="http://cascam.ou.edu/axis-cgi/mjpg/video.cgi?resolution=320x240"
        android:selectAllOnFocus="true"
        android:inputType="textUri"
        android:singleLine="true"
        android:maxLines="1" />

    <EditTextPreference
        android:key="stream_width"
        android:title="Szerokość streamu"
        android:defaultValue="320"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1"/>

    <EditTextPreference
        android:key="stream_height"
        android:title="Wysokość streamu"
        android:defaultValue="240"
        android:selectAllOnFocus="true"
        android:inputType="numberDecimal"
        android:singleLine="true"
        android:maxLines="1"/>

</PreferenceScreen>
